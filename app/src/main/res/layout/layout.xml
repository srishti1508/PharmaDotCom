<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SaleReportActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--<ImageView
                android:id="@+id/rightimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/calendar1" />-->

            <TextView
                android:id="@+id/activityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingEnd="0dp"
                android:paddingStart="15dp"
                android:text="Pharma Dot Com"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>



    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    >

                    <TextView
                        android:id="@+id/Company"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="ABBOTT CRITICAL CARE"
                        android:textColor="#004497"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Opening Stock Report"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textColor="#004497"
                        android:textSize="15dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Date :"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textColor="#004497"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/fromdate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="right"
                        android:maxLines="10"
                        android:hint="From Date"
                        android:scrollbars="vertical"
                        android:padding="5dp"
                        android:editable="false"
                        android:focusable="false"
                        android:background="@drawable/layout_rect"
                        android:textColor="#004497"
                        android:textSize="15dp" />


                    <!--  <EditText
                          android:id="@+id/fromdate"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginRight="5dp"
                          android:layout_marginTop="5dp"
                          android:layout_weight="1"
                          android:background="@drawable/layout_rect"
                          android:editable="false"
                          android:focusable="false"
                          android:gravity="top|left"
                          android:hint="From Date"
                          android:inputType="textMultiLine"
                          android:maxLines="10"
                          android:padding="10dp"
                          android:scrollbars="vertical"
                          android:textSize="15dp"
                          />-->

                    <TextView

