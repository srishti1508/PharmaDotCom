<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SaleReportActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/white"
      >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--<ImageView
                android:id="@+id/rightimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/calendar1" />-->

            <TextView
                android:id="@+id/activityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingEnd="0dp"
                android:paddingStart="15dp"
                android:text="Pharma Dot Com"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>



</android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
       >

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            >

            <TextView
                android:id="@+id/Company"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:textStyle="bold"
                android:text="ABBOTT CRITICAL CARE"
                android:textColor="#004497"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Opening Stock Report"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#004497"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:fontFamily="sans-serif-smallcaps"
                android:text="Date :"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#004497"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/fromdate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="right"
                android:maxLines="10"
                android:hint="From Date"
                android:scrollbars="vertical"
                android:padding="5dp"
                android:editable="false"
                android:focusable="false"
                android:background="@drawable/layout_rect"
                android:textColor="#004497"
                android:textSize="15dp" />


          <!--  <EditText
                android:id="@+id/fromdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/layout_rect"
                android:editable="false"
                android:focusable="false"
                android:gravity="top|left"
                android:hint="From Date"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="15dp"
                />-->

            <TextView

                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="-"
                android:textColor="#004497"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/todate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="right"
                android:maxLines="10"
                android:hint="To Date"
                android:scrollbars="vertical"
                android:padding="5dp"
                android:editable="false"
                android:focusable="false"
                android:background="@drawable/layout_rect"
                android:textColor="#004497"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Search"
                android:padding="5dp"
                android:layout_marginLeft="30dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffff"
                android:textSize="15dp" />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:visibility="gone"


           >

        </android.support.v7.widget.RecyclerView>






    </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>


    <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress"
        style="@style/SpinKitView.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        app:SpinKit_Color="@color/colorPrimaryDark"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="Total :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffff"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:typeface="sans"

                    />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/accounts_data_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:background="#d5f7f9"
            android:visibility="visible">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/paid_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Opening Stock :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#030303"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="13dp"
                    android:typeface="sans" />


                <TextView
                    android:id="@+id/ttlopeningstock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="50"
                    android:paddingLeft="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#181515"
                    android:textSize="13dp"
                    android:typeface="sans"

                    />



            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="Opening Value :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#151313"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="13dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/ttlopeningvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:singleLine="false"
                    android:text="4900"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1b1919"
                    android:typeface="sans"
                    android:textSize="13dp"/>



            </LinearLayout>





            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Purchase :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#151313"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="13dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/totalPurchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="5000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1b1919"
                    android:typeface="sans"
                    android:textSize="13dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Sale Return :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1b1919"
                    android:typeface="sans"
                    android:textSize="13dp"

                    />

                <TextView
                    android:id="@+id/totalSalereturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="6000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1b1919"
                    android:typeface="sans"
                    android:textSize="13dp"

                    />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Purchase Return :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#151313"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="13dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/totalPurchasereturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="45000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1b1919"
                    android:typeface="sans"
                    android:textSize="13dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:singleLine="false"
                    android:text="Sale :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1b1919"
                    android:typeface="sans"
                    android:textSize="13dp"

                    />

                <TextView
                    android:id="@+id/totalSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="45000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1b1919"
                    android:typeface="sans"
                    android:textSize="13dp"

                    />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Sale Value :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#151313"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="13dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/totalSaleValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="45000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1b1919"
                    android:typeface="sans"
                    android:textSize="13dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:singleLine="false"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Closing Stock :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1b1919"
                    android:typeface="sans"
                    android:textSize="13dp"

                    />

                <TextView
                    android:id="@+id/totalclosingstock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="45000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1b1919"
                    android:typeface="sans"
                    android:textSize="13dp"

                    />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Closing Value :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#151313"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="13dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/totalClosingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:text="45000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#1b1919"
                    android:typeface="sans"
                    android:textSize="13dp"

                    />


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>