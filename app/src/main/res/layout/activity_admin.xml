<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity"
    android:background="#8bc0df">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >



         <android.support.v7.widget.Toolbar
             android:id="@+id/toolbar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/colorPrimary"
             app:titleTextColor="@color/white"
             >
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">
                 <!--<ImageView
                     android:id="@+id/rightimage"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="10dp"
                     android:layout_marginEnd="10dp"
                     android:layout_alignParentEnd="true"
                     android:src="@drawable/calendar1" />-->

                 <TextView
                     android:id="@+id/activityName"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_alignParentStart="true"
                     android:layout_marginStart="0dp"
                     android:gravity="center_vertical"
                     android:padding="10dp"
                     android:paddingStart="15dp"
                     android:paddingEnd="0dp"
                     android:text="Credit Report"
                     android:textColor="#fff"
                     android:textSize="20sp"
                     android:textStyle="bold" />

             </RelativeLayout>



         </android.support.v7.widget.Toolbar>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SALE DETAIL"
            android:textColor="#000"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="17dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="#e9e6e6"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/custom_circle"
                    android:id="@+id/lay_slcr"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SALE IN CREDIT"
                        android:layout_weight="1"

                        android:textColor="#000"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/credit_sale"
                        android:gravity="end"

                        android:textColor="#000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/custom_circle"
                    android:id="@+id/lay_slrtn"

                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="SALE RETURN IN CREDIT"
                        android:textColor="#000"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/credit_saleRTN"
                        android:gravity="end"
                        android:layout_weight="1"

                        android:textColor="#000"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/custom_circle"
                    android:id="@+id/lay_recev"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="RECEIVED"
                        android:textColor="#000"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/credit_receive"
                        android:layout_weight="1"
                        android:gravity="end"

                        android:textColor="#000"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:background="@drawable/custom_circle"
                    android:id="@+id/lay_amttkn"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="AMOUNT TO BE TAKEN"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/credit_tknamt"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:gravity="end"

                        android:textStyle="bold"
                        />
                </LinearLayout>



            </LinearLayout>




        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PURCHASE DETAIL"
            android:textColor="#000"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:textSize="15dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:cardBackgroundColor="#e9e6e6"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/custom_circle"
                    android:id="@+id/lay_prucr"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="PURCHASE IN CREDIT"
                        android:textColor="#000"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/purchase_sale"

                        android:textColor="#000"
                        android:layout_weight="1"
                        android:gravity="end"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/custom_circle"
                    android:id="@+id/lay_purrtn"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="PURCHASE RETURN IN CREDIT"
                        android:textColor="#000"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/purchase_saleRTN"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:gravity="end"

                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/custom_circle"
                    android:id="@+id/lay_supp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="PAID TO SUPPLIER"
                        android:textColor="#000"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/paid_supp"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:gravity="end"

                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/custom_circle"
                    android:id="@+id/lay_note"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="CREDIT NOTE"
                        android:textColor="#000"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/credit_note"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:gravity="end"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/custom_circle"
                    android:id="@+id/lay_amtpad"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="AMOUNT TO BE PAID"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/credit_paidAmt"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:gravity="end"

                        android:textStyle="bold"
                        />
                </LinearLayout>



            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>